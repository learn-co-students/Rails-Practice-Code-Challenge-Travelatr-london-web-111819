<%= form_for (@blogger) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :bio %>
    <%= f.text_field :bio %><br>

    <%= f.label :age %>
    <%= f.number_field :age %><br>

    <%= f.submit %>
<% end %>    

<% if @blogger.errors.full_messages.length > 0 %>
 <h3> The following errors occured: </h3>
 <ul><% @blogger.errors.full_messages.each do |message| %>
    <li style="color:red"><%= message %></li>
    <% end %>
    </ul>
 <% end %> 

