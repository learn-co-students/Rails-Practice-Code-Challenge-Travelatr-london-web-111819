<%= form_for (@post) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :content %>
    <%= f.text_area :content %><br>

    <%= f.label :destination %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name %><br>

    <%= f.label :blogger %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name %><br>

    <%= f.submit %>
<% end %>   

<% if @post.errors.full_messages.length > 0 %>
 <h3> The following errors occured: </h3>
 <ul><% @post.errors.full_messages.each do |message| %>
    <li style="color:red"><%= message %></li>
    <% end %>
    </ul>
<% end %>